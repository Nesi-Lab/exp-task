{
  "name": "task-provocation",
  "version": "0.1.0",
  "private": true,
  "main": "src/electron-starter.js",
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bootstrap": "^4.3.1",
    "event-marker": "git+https://github.com/brown-ccv/event-marker.git",
    "jquery": "^3.4.1",
    "jspsych-react": "^0.2.2",
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "BROWSER=none NODE_PATH=./src react-scripts start",
    "firefox": "BROWSER=firefox npm start",
    "prebuild:mac": "react-scripts build",
    "prebuild:linux": "react-scripts build",
    "prebuild:windows": "react-scripts build",
    "build": "npm-run-all --parallel build:*",
    "build:windows": "electron-packager . --platform win32 --arch x64 --out dist/ --overwrite",
    "build:mac": "electron-packager . --platform darwin --arch x64 --out dist/ --overwrite",
    "build:linux": "electron-packager . --platform win32 --arch x64 --out dist/ --overwrite",
    "postbuild:windows": "electron-installer-windows --src dist/neuro-task-win32-x64/ --dest dist/installers/ --overwrite",
    "postbuild:mac": "electron-installer-dmg dist/neuro-task-darwin-x64/neuro-task.app neuro-task --out dist/installers/ --overwrite",
    "postbuild:linux": "electron-installer-debian --src dist/neuro-task-linux-x86_64/ --dest dist/installers/ --arch x86_64 --overwrite",
    "postinstall": "$(npm bin)/electron-rebuild",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently --kill-others \"npm:start\" \"sleep 5 && npm run electron-dev\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "electron": "^5.0.5",
    "electron-installer-debian": "^2.0.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-installer-windows": "^2.0.0",
    "electron-packager": "^14.0.0",
    "electron-rebuild": "^1.8.5",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "npm-run-all": "^4.1.5"
  }
}
