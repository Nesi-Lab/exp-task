{
  "name": "provocation",
  "description": "Provocation task app",
  "version": "0.1.0",
  "author": {
    "name": "Brown CCV",
    "email": "ccv-bot@brown.edu",
    "url": "ccv.brown.edu"
  },
  "private": true,
  "license": "MIT",
  "main": "public/electron.js",
  "homepage": ".",
  "repository": "https://github.com/brown-ccv/task-provocation",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bootstrap": "^4.3.1",
    "electron-log": "^3.0.9",
    "electron-squirrel-startup": "^1.0.0",
    "event-marker": "git+https://github.com/brown-ccv/event-marker.git#bump-version",
    "jquery": "^3.4.1",
    "jspsych-react": "^0.2.2",
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "tar": "^4.4.10"
  },
  "scripts": {
    "start": "BROWSER=none NODE_PATH=./src react-scripts start",
    "firefox": "BROWSER=firefox npm start",
    "prebuild": "electron-rebuild",
    "build": "react-scripts build",
    "package:windows": "electron-packager . --platform win32 --arch x64 --out dist/ --overwrite --asar ",
    "package:mac": "electron-builder",
    "package:linux": "electron-packager . --platform linux --arch x64 --out dist/ --overwrite",
    "postpackage:windows": "electron-installer-windows --src dist/provocation-win32-x64/ --dest dist/installers/ --overwrite --homepage https://ccv.brown.edu/",
    "postpackage:linux": "electron-installer-debian --src dist/provocation-linux-x64/ --dest dist/installers/ --arch x64 --overwrite",
    "rebuild": "electron-rebuild",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently --kill-others \"npm:start\" \"sleep 5 && npm run electron-dev\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-macros": "^2.6.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.1",
    "electron": "6.1.1",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.0.0",
    "electron-rebuild": "^1.8.5",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "require-context.macro": "^1.1.1"
  },
  "babel": {
    "plugin": [
      "macros"
    ]
  },
  "optionalDependencies": {
    "electron-installer-debian": "^2.0.0",
    "electron-installer-windows": "^2.0.0"
  }
}
